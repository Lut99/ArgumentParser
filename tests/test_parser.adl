 * A test file for me to develop the parser with; it will thus be extended
 * step-for-step.
 */

<date> {
    name "Date";
    pattern <uint>.pattern "-" <uint>.pattern "-" <uint>.pattern;
}

<hello_world> {
    name "Hello, world!";
    pattern r"[A-Za-z_]+";
    source "hello_world.cpp";
}

<regex_test> {
    name "Regex Test";
    pattern <uint>.pattern r"-\.\/" <uint>.pattern r"-\.\/" <uint>.pattern;
}
